{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "rootDir": "./",
    "outDir": "dist/js",
    "sourceMap": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  }
}